<div class="container mt-4">
    <div class="page-header d-flex justify-content-between align-items-center">
        <h1><i class="fas fa-question-circle"></i> Question Details</h1>
        <div>
            <a href="/questions/<%= question._id %>/edit" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit Question
            </a>
            <form action="/questions/<%= question._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this question?')">
                    <i class="fas fa-trash"></i> Delete Question
                </button>
            </form>
            <a href="/questions" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Questions
            </a>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h2 class="card-title">Question Details</h2>
            <hr>
            <h5>Question:</h5>
            <p><%= question.text || question.questionText %></p>
            <h5 class="mt-4">Options</h5>
            <ul class="list-group mb-3">
                <% question.options.forEach((option, index) => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= option %>
                        <% if (typeof question.correctAnswerIndex !== 'undefined' ? index === question.correctAnswerIndex : index === question.correctOption) { %>
                            <span class="badge bg-success">Correct Answer</span>
                        <% } %>
                    </li>
                <% }); %>
            </ul>

            <% if (question.keywords && question.keywords.length > 0) { %>
                <h5 class="card-title mt-4">Keywords</h5>
                <div class="keywords-list">
                    <% question.keywords.forEach(keyword => { %>
                        <span class="badge bg-info me-2"><%= keyword %></span>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
</div>
